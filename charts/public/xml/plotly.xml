<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE visualization SYSTEM "../../visualization.dtd">
<visualization name="Plotly: Line" logo="logo/plotly.svg">
    <description>Line Diagram of Plotly JavaScript Open Source Graphing Library hosted at plotly.com.</description>
    <data_sources>
        <data_source>
            <model_class>HistoryDatasetAssociation</model_class>
            <test type="isinstance" test_attr="datatype" result_type="datatype">tabular.Tabular</test>
            <test type="isinstance" test_attr="datatype" result_type="datatype">tabular.CSV</test>
            <to_param param_attr="id">dataset_id</to_param>
        </data_source>
    </data_sources>
    <params>
        <param type="dataset" var_name_in_template="hda" required="true">dataset_id</param>
    </params>
    <entry_point entry_point_type="chart" src="nvd3.js" css="nvd3.css" load="nvd3_bar"/>
    <specs>
        <type>bar</type>
    </specs>
    <tracks>
        <input>
            <label>Pick a series color</label>
            <name>color</name>
            <type>color</type>
            <optional>true</optional>
        </input>
        <input>
            <label>Provide a label</label>
            <name>name</name>
            <type>text</type>
            <placeholder>Data label</placeholder>
            <value>Data label</value>
        </input>
        <input>
            <name>x</name>
            <label>Column of x-axis values</label>
            <type>data_column</type>
            <is_auto>true</is_auto>
            <is_text>true</is_text>
        </input>
        <input>
            <name>y</name>
            <label>Column of y-axis values</label>
            <type>data_column</type>
            <is_number>true</is_number>
        </input>
    </tracks>
</visualization>